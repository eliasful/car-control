<div class="py-md-5 pl-md-5 bd-content">
  <h1>
    <i class="fa fa-list-ul"></i> Lista de Usuários
    {{#link-to 'vehicle.new' class="btn btn-primary btn-lg"}}
      <i class="fa fa-plus"></i> Novo Usuário
    {{/link-to}}
  </h1>
  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped table-hover">
        <thead class="thead-light">
          <tr>
            <th scope="col">Nome</th>
            <th scope="col">E-mail</th>
            <th class="text-right" scope="col">Ação</th>
          </tr>
        </thead>
        <tbody>
          {{#each model as |item|}}
            <tr>
              <td>{{item.name}}</td>
              <td>{{item.email}}</td>
              <td class="text-right">
                <i class="fa fa-close" title="Deletar"></i>
              </td>
            </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
  </div>
</div>
