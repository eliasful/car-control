<div class="py-md-5 pl-md-5 bd-content">
  <h2>
    <i class="fa fa-plus"></i> {{title}}
  </h2>
  <form {{action 'save' model on='submit'}}>
    <div class="row">
      <div class="form-group">
        <label>Adicionar Fotos</label> {{post-image-select postImages=postImages}}
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-md-6 mb-3">
        <label>Nome</label> {{input type="text" class="form-control" placeholder="Nome" value=model.name required="required"}}
      </div>
      <div class="col-md-6 mb-3">
        <label>Marca</label> {{input-select endpoint='brand' selected=model.brand}}
      </div>
    </div>
    <div class="row">
      <div class="col-md-3 mb-2">
        <label>Ano</label> {{input-mask mask='9999' type="text" class="form-control" placeholder="Ano" value=model.year}}
      </div>
      <div class="col-md-3 mb-2">
        <label>Modelo</label> {{input-mask mask='9999' type="text" class="form-control" placeholder="Modelo" value=model.model}}
      </div>
      <div class="col-md-3 mb-2">
        <label>Combustivel</label>
        {{#input-select-each selected=model.fuel}}
          <option value="Flex">Flex</option>
          <option value="Etanol">Etanol</option>
          <option value="Gasolina">Gasolina</option>
          <option value="Diesel">Diesel</option>
          <option value="Eletrico">Eletrico</option>
          <option value="Gás">Gás</option>
        {{/input-select-each}}
      </div>
      <div class="col-md-3 mb-2">
        <label>Cor</label> {{input type="text" class="form-control" placeholder="Cor" value=model.color}}
      </div>
      <div class="col-md-2 mb-2">
        <label>Motor</label> {{input type="text" class="form-control" placeholder="Motor" value=model.motor}}
      </div>
      <div class="col-md-2 mb-2">
        <label>Placa</label> {{input-mask mask='AAA-9999' unmaskedValue=model.plate type="text" class="form-control" placeholder="Placa"}}
      </div>
      <div class="col-md-4 mb-4">
        <label>Preço Compra</label>
        <div class="input-group">
          <span class="input-group-addon">R$</span> {{input-mask mask='currency' unmaskedValue=model.pricePurchase class="form-control" placeholder="Preço Compra"}}
        </div>
      </div>
      <div class="col-md-4 mb-4">
        <label>Preço Venda</label>
        <div class="input-group">
          <span class="input-group-addon">R$</span> {{input-mask mask='currency' unmaskedValue=model.priceSale class="form-control" placeholder="Preço Venda"}}
        </div>
      </div>
      <div class="col-md-12">
        <label>Descrição</label> {{textarea class="form-control" rows="3" value=model.description placeholder="Descrição"}}
      </div>
    </div>
    <br>
    <div class="pull-left">
      {{#unless model.isNew}}
        <button class="btn btn-danger" type="button" {{action 'delete' model}}>
          <i class="fa fa-trash-o"></i> Deletar
        </button>
      {{/unless}}
    </div>
    <div class="pull-right">
      {{#link-to 'vehicle.index' class="btn btn-secondary" }}
        <i class="fa fa-close"></i> Cancelar
      {{/link-to}}
      <button class="btn btn-primary" type="submit">
        <i class="fa fa-save"></i> Salvar
      </button>
    </div>
  </form>
</div>
