{{#if session.isAuthenticated}}
  {{application-header session=session}}
{{else}}
  <div class="container">
    <form class="form-signin">
      <h2 class="form-signin-heading">Escolha a opção desejada</h2>
      <div class="form-group col-md-6">
        <label>E-mail</label> {{input type="email" value=model.user.email class="form-control" placeholder="E-mail" required="required" }}
      </div>
      <div class="form-group col-md-6">
        <label>Senha</label> {{input type="password" value=model.user.password class="form-control" placeholder="Senha" required="required" minlength="6"}}
      </div>
      <button class="btn btn-danger" {{action "signIn" "password" model}}>
        <span class="fa fa-google"></span> Login
      </button>
      <!-- <button class="btn btn-danger" {{action "signIn" "google"}}>
        <span class="fa fa-google"></span> Login com Google
      </button>
      <button class="btn btn-primary" {{action "signIn" "facebook"}}>
        <span class="fa fa-facebook"></span> Login com Facebook
      </button> -->
      <button class="btn" data-toggle="modal" data-target="#company">
        <span class="fa fa-plus"></span> Criar Nova Empresa
      </button>
    </form>
  </div>
  {{form-company model=model}}
{{/if}}
